extends ./layout/layout

block css 
  link(rel="stylesheet", href="/css/regist.css")

mixin userinfo
  .layui-form-item
    label.layui-form-label 用户名
    .layui-input-inline
      input(type="text", name="username", required, layui-verify="required", placeholder="请输入用户名", autocomplete="off").layui-input
  .layui-form-item
    label.layui-form-label 密码
    .layui-input-inline
      input(type="password", name="password", required, layui-verify="required", placeholder="请输入密码", autocomplete="off").layui-input

mixin btn
  button(lay-submit,lay-filter="formDemo").layui-btn.layui-btn-normal.sub-btn 立即提交
  button(type="reset").layui-btn.layui-btn-danger 重置
  

  
block content
  .layui-container.regist-block
    .layui-tab.layui-tab-card
      ul.layui-tab-title
        li(class=show?"":"layui-this") 
          a(href="/user/login") 用户登录
        li(class=show?"layui-this":"") 
          a(href="/user/reg") 用户注册
      .layui-tab-content
        //- 登录
        .layui-tab-item(class=show?"":"layui-show")
          form.layui-form#login-form
            +userinfo
            .layui-form-item
              .layui-input-block
                +btn
        .layui-tab-item(class=show?"layui-show":"")
          form.layui-form#regist-form
            +userinfo
            .layui-form-item
              label.layui-form-label 确认密码
              .layui-input-inline
                input(type="password", name="confirmPWD", required, layui-verify="required", placeholder="请确认密码").layui-input
                
            .layui-form-item
              .layui-input-block
                +btn
                
block scripts
  script(src="/js/regist.js")
                
